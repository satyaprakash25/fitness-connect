                                    <img class="profile-user-img img-responsive img-circle" src="/@Model.ImagePath" alt="User profile picture">

                                    <h3 class="profile-username text-center">@Model.Name</h3>

                                    <p class="text-muted text-center"><i class="fa fa-circle text-success"></i> Member since @Model.JoiningDate.ToString("dd/MM/yyyy")</p>

                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item">
                                            <b>Billing Group</b> <a class="pull-right">28th</a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Subscription</b>
                                            <ul class="list-unstyled pull-right">
                                                <li><b>Personal Training,Camping</b></li>
                                            </ul>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Correspond By</b>
                                            <ul class="list-unstyled pull-right">
                                                <li><b>Letter(Billing Address)</b></li>
                                            </ul>
                                        </li>
                                        <li class="list-group-item box">
                                            <b>Draft By</b>
                                            <div class="box-body table-responsive no-padding box-body">
                                                <table class="table table-hover">
                                                    <tbody>
                                                        <tr>
                                                            <td class="text-bold">Draft By</td>
                                                            <td>Bank Draft</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-bold">Account Number</td>
                                                            <td>123456789</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-bold">Aba Number</td>
                                                            <td>121000248</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /.box-body -->
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="relatedacc">
                                    <img class="profile-user-img img-responsive img-circle" src="/@Model.ImagePath" alt="User profile picture">

                                    <h3 class="profile-username text-center">@Model.Name</h3>

                                    <p class="text-muted text-center"><i class="fa fa-circle text-success"></i> Member since @Model.JoiningDate.ToString("dd/MM/yyyy")</p>

