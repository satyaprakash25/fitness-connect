                                        <li class="list-group-item" data-toggle="modal" data-target="#erica">
                                            <b>Erica Nicholson</b> <a class="pull-right">Spouse</a>
                                        </li>
                                        <li class="list-group-item" data-toggle="modal" data-target="#ryan">
                                            <b>Ryan Nicholson</b> <a class="pull-right">Child</a>
                                        </li>
                                        <li class="list-group-item" data-toggle="modal" data-target="#john">
                                            <b>John Nicholson</b> <a class="pull-right">Child</a>
                                        </li>
                                    </ul>                                    
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                    </div>
                    <!-- Profile Image -->
                    <!-- /.box -->
                    <!-- About Me Box -->
                    <div class="box box-primary">

                        <!-- /.box-header -->
                        <div class="box-body">
                            <strong><i class="fa fa-pencil margin-r-5"></i> About me</strong>

                            <p class="text-muted">
                                B.S. in Computer Science from the University of Tennessee at Knoxville
                            </p>

                            <hr>

                            <strong><i class="fa fa-heartbeat margin-r-5"></i> Why I want to get in shape</strong>

                            <p class="text-muted">It pays off. The sweat. The time. The tears. The devotion.</p>

                            <hr>

                            <strong><i class="fa fa-user-plus margin-r-5"></i> My Inspiration</strong>

                            <p>Myself</p>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->                
            </div>
            <!-- /.col -->
            <div class="col-md-7">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#timeline" data-toggle="tab">Timeline</a></li>
                        <!--TO-DO need better name suggestion for this one-->
                        <li><a href="#settings" data-toggle="tab">Set your current health</a></li>
                    </ul>
                    <div class="tab-content">

                        <div class="active tab-pane" id="timeline">
                            <!-- The timeline -->
                            <ul class="timeline">
                                @foreach (var item in Model.UserHealthDetails.OrderByDescending(a => a.CreationDate).ToList())
                                {
                                    <!-- timeline time label -->
                                    <li class="time-label">
                                        <span class="bg-purple">
                                            @item.CreationDate.Value.ToString("dd-MMM-yyyy")
                                        </span>
                                    </li>
                                    <!-- /.timeline-label -->
                                    <!-- timeline item -->
                                    <li>
                                        <i class="fa fa-child bg-light-blue-gradient text-warning"></i>
                                        <div class="timeline-item">
                                            <span class="time"><i class="fa fa-watch-fitness"></i> @item.CreationDate.Value.ToString("hh:mm tt")</span>
                                            <h3 class="timeline-header"><a href="#">You have entered</a></h3>
                                            <div class="timeline-body">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <b>Weight: </b>@item.Weight Kg
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <b>Height: </b> @item.Height cms
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <b>Abdomen: </b>@item.Abdomen cms
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <b>Neck: </b>@item.Neck cms
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </li>
                                    <!-- END timeline item -->

                                }
                                <li>
                                    <i class="fa fa-clock-o bg-gray"></i>
                                </li>
                            </ul>
                        </div>
                        <!-- /.tab-pane -->

                        <div class="tab-pane" id="settings">
                            <form asp-action="SaveUserHealthInformation" asp-controller="home" method="post" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Weight</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="Weight" class="form-control" placeholder="Eg: 70 kg">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Height</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="Height" class="form-control" placeholder="Eg: 170 cms">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Abdomen</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="Abdomen" class="form-control" placeholder="Eg: 70 cms">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Neck</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="Neck" class="form-control" placeholder="Eg: 170 cms">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
            <!-- /.row -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
