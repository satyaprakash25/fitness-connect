@using System.Security.Claims;
@model IList<GL.FC.Shared.PostModel>
@{
    ViewData["Title"] = "Fitness Connect";
}
<!-- bootstrap wysihtml5 - text editor -->
<link rel="stylesheet" href="~/static/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" />
<link href="~/static/dist/css/dropzone.min.css" rel="stylesheet" />
<link href="https://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.3.1/solar/bootstrap.min.css">
<style>
    .input-icons {
        border: 1px solid #ccc;
        position: relative;
        border-radius: 5px;
        padding-left: 10px;
        padding: 5px;
    }

        .input-icons textarea {
            width: calc(100% - 34px);
            overflow: auto;
            resize: none;
            appearance: none;
            border: 0;
            height: 40px;
            transition: all .5s;
        }

            .input-icons textarea:focus {
                height: 100px;
                outline: 0;
            }

    span.emoji_picker {
        position: absolute;
        z-index: 5;
        bottom: 0px;
        cursor: pointer;
    }

        span.emoji_picker:hover svg path {
            stroke: yellow;
            fill: #000;
        }

    .dropbtn {
        background-color: #4CAF50;
        color: white;
        padding: 8px 15px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        line-height: 1.5;
        margin-left: 20px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }

    .image-upload > input {
        display: none;
    }

    .image-upload {
        display: inline-block;
        margin-right: 10px;
        margin-left: 10px;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Fitness Connect
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Connect</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-10">
                <form asp-action="connect" asp-controller="Post" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                    <div class="box box-warning">
                        <div class="box-body">
                            <!-- Custom Tabs -->
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs" style="display:none;">
                                    <li class="active"><a href="#tab_1" data-toggle="tab" class="text-blue"><i class="fa fa-pencil"></i> Create a post</a></li>
                                    <li><a href="#tab_2" data-toggle="tab" class="text-navy"><i class="fa fa-photo"></i> Photo Album</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <div @*class="input-icons"*@>
                                            <textarea name="Description" @*class="form-control"*@ @*class="richtextbox"*@ placeholder="Whats on your mind?" style="font-size: 14px; line-height: 18px;  padding: 10px; width:100%;border-radius:5px;"></textarea>
                                            @*<span class="emoji_picker"><svg width="24" height="24"><path d="M9 11c.6 0 1-.4 1-1s-.4-1-1-1a1 1 0 00-1 1c0 .6.4 1 1 1zm6 0c.6 0 1-.4 1-1s-.4-1-1-1a1 1 0 00-1 1c0 .6.4 1 1 1zm-3 5.5c2.1 0 4-1.5 4.4-3.5H7.6c.5 2 2.3 3.5 4.4 3.5zM12 4a8 8 0 100 16 8 8 0 000-16zm0 14.5a6.5 6.5 0 110-13 6.5 6.5 0 010 13z" fill-rule="nonzero"></path></svg></span>*@
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="tab_2">
                                        <div class="dropzone" style="height:100px">
                                            <input name="Files" id="UploadForm" type="file" multiple />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            @*<div class="form-group">
                                    <b> Select Category</b>
                                    @foreach (var item in ((IList<GL.FC.Shared.CategoryModel>)ViewBag.CategoryList).Select((value, i) => new { i, value }))
                                    {
                                        <label class="radio-inline">
                                            <input type="radio" name="CategoryId" value="@item.value.Id" @(item.i == 0 ? "checked" : string.Empty)>@item.value.Title
                                        </label>
                                    }
                                </div>*@
                            <div class="image-upload">
                                <label for="file-input">
                                    <i class="fa fa-upload" style="cursor:pointer; transform: scale(2.5,3); width: 10px; padding-right: 11px;" aria-hidden="true"></i>
                                    @*<img src="~/static/dist/img/upload-photo-icon-21.jpg" width="40" />*@
                                </label>

                                <input id="file-input" type="file" />
                            </div>
                            <div class="form-group dropdown">
                                <button class="dropbtn">Select Category</button>
                                <div class="dropdown-content">
                                    @foreach (var item in ((IList<GL.FC.Shared.CategoryModel>)ViewBag.CategoryList).Select((value, i) => new { i, value }))
                                    {
                                        @*<label class="radio-inline">
                                                <input type="radio" name="CategoryId" value="@item.value.Id" @(item.i == 0 ? "checked" : string.Empty)>@item.value.Title
                                            </label>*@
                                        <input type="radio" name="CategoryId" value="@item.value.Id" @(item.i == 0 ? "checked" : string.Empty)>@item.value.Title
                                        <br />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn bg-purple-gradient pull-right">Publish</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10">
                <div class="box box-primary">
                    <div class="box-body">
                        @foreach (var item in Model)
                        {
                            <!-- Post -->
                            <div class="post">
                                <div class="user-block">
                                    <img class="img-circle img-bordered-sm" src="/@item.CreatedByUser.ImagePath" alt="user image">
                                    <span class="username">
                                        <a href="#">@item.CreatedByUser.Name</a>
                                    </span>

                                    @if (User.FindFirst("Id").Value.Equals(item.CreatedByUser.Id.ToString()))
                                    {
                                        <form asp-action="Delete" asp-controller="Post" asp-antiforgery="true">
                                            <input type="hidden" value="@item.Id" />
                                            <button type="submit" class="pull-right btn btn-xs btn-box-tool label bg-red" style="margin-left:15px">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    <span class="username">
                                        <a href="#" class="pull-right ">
                                            <span class="pull-right-container"><b class="label pull-right bg-@item.Category.BgColor">@item.Category.Title</b></span>
                                        </a>
                                    </span>
                                    <span class="description">Shared publicly - @item.CreationDate.Value.ToString("dd/MM/yyyy") </span>
                                </div>
                                <!-- /.user-block -->
                                <p>
                                    @Html.Raw(item.Description)
                                </p>
                                <ul class="list-inline">
                                    <li><a href="#" class="link-black text-sm"><i class="fa fa-share margin-r-5"></i> Share</a></li>
                                    <li>
                                        <a href="#" class="link-black text-sm"><i class="fa fa-thumbs-o-up margin-r-5"></i> Like</a>
                                    </li>
                                    <li class="pull-right">
                                        <a href="#" class="link-black text-sm">
                                            <i class="fa fa-comments-o margin-r-5"></i> Comments
                                            (5)
                                        </a>
                                    </li>
                                </ul>

                                <input class="form-control input-sm" type="text" placeholder="Type a comment">
                            </div>
                            <!-- /.post -->
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- /.tab-pane -->
    </section>
</div>

@section Scripts
{
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/static/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="~/static/dist/js/dropzone.min.js"></script>
    <script>
        Dropzone.autoDiscover = false;
        $(".richtextbox").wysihtml5({
            "font-styles": true, //Font styling, e.g. h1, h2, etc. Default true
            "emphasis": true, //Italics, bold, etc. Default true
            "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
            "html": false, //Button which allows you to edit the generated HTML. Default false
            "link": true, //Button to insert a link. Default true
            "image": false, //Button to insert an image. Default true,
            "color": false, //Button to change color of font
            "blockquote": true, //Blockquote
            "size": "sm" //default: none, other options are xs, sm, lg
        });
        $(document).ready(function () {
            Dropzone.options.UploadForm = {
                dictDefaultMessage: "Drag your images",
                clickable: true,
                enqueueForUpload: true,
                maxFilesize: 1,
                uploadMultiple: false,
                addRemoveLinks: true
            };
        })
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="~/static/dist/js/inputEmoji.js"></script>
    <script>
        $(function () {
            $('textarea').emoji({ place: 'after' });
        })
    </script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-36251023-1']);
        _gaq.push(['_setDomainName', 'jqueryscript.net']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
}